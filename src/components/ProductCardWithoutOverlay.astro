---
import ProductCard from './ProductCard.astro';

interface Props {
  id: string;
  title: string;
  price?: number;
  imageUrl: string;
  sex: string;
}

const { id, title, price, imageUrl, sex } = Astro.props as Props;
---

<div
  tab-index={0}
  class="group overflow-hiddens relative block w-full border-t-1 border-gray-100 md:w-1/3"
>
  <ProductCard
    id={id}
    title={title}
    price={price}
    imageUrl={imageUrl}
    sex={sex}
  />
</div>
