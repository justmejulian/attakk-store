---
import HeaderImage from '@images/PHOTO-2025-07-30-11-51-04.jpg';
---

<header class="relative min-h-1/2 w-full overflow-hidden bg-black">
  <img
    src={HeaderImage.src}
    alt="Header"
    class="absolute top-0 h-full w-full object-cover object-right opacity-40"
  />
  <div class="flex h-full w-full items-center justify-center">
    <div
      class="w-full max-w-screen-xl translate-0 p-6 px-4 py-0 sm:px-6 lg:px-8"
    >
      <slot />
    </div>
  </div>
</header>
