---
import type { Product } from '@content/products';

interface Props {
  products: Product[];
}

const { products } = Astro.props;
---

<a
  href="/products"
  class="relative flex min-w-2/3 flex-col items-center justify-center overflow-hidden hover:bg-gray-300 md:max-w-1/2 md:min-w-0 md:flex-1/3 lg:max-w-1/3 lg:flex-1/4"
>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    fill="none"
    viewBox="0 0 24 24"
    stroke-width={2}
    stroke="currentColor"
    class="mb-2 h-8 w-8"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3"></path>
  </svg>

  <h3 class="mb-2 text-2xl font-bold tracking-widest uppercase">View All</h3>
  <p class="text-sm font-medium opacity-80">
    {products.length} Products Available
  </p>
</a>
