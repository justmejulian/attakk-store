---
/* eslint-disable astro/jsx-a11y/no-noninteractive-tabindex */
import ProductCardOverlay from './ProductCardOverlay.astro';
import ProductCard from './ProductCard.astro';

interface Props {
  id: string;
  title: string;
  price: number;
  imageUrls: [string, string];
  index?: number;
}

const { id, title, price, imageUrls, index } = Astro.props as Props;
---

<div tabindex="0" class="group relative block w-full overflow-hidden md:w-1/3">
  <ProductCardOverlay title={title} imageUrl={imageUrls[0]} index={index} />
  <ProductCard id={id} title={title} price={price} imageUrls={imageUrls} />
</div>
