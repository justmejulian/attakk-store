---
import Header from '@components/Header.astro';
import Main from '@components/Main.astro';
import ProductCardWithoutOverlay from '@components/ProductCardWithoutOverlay.astro';
import { getProducts, getPassedProducts } from '@utils/products';
import Layout from '@layouts/Layout.astro';
import ProductCardWithOverlay from '@components/ProductCardWithOverlay.astro';

const products = getProducts();
const passedProducts = getPassedProducts();
---

<Layout>
  <Header>
    <h2>Product Collection</h2>

    <p class="mt-4 max-w-md text-white">
      Lorem ipsum, dolor sit amet consectetur adipisicing elit. Itaque
      praesentium cumque iure dicta incidunt est ipsam, officia dolor fugit
      natus?
    </p>
  </Header>
  <Main>
    <h1 class="font-cursive text-primary my-4 tracking-widest">
      Invincible Yellow
    </h1>
    <div class="mx-auto flex w-full flex-wrap justify-center">
      {
        products.map((product) => (
          <ProductCardWithoutOverlay
            id={product.id}
            imageUrl={product.imageUrls[0]}
            title={product.title}
            price={product.price}
            sex={product.sex}
          />
        ))
      }
    </div>

    <h1 class="font-cursive tracking-widestb my-4 border-t-2 pt-4">
      Passed Drops
    </h1>
    <div class="mx-auto flex w-full flex-wrap justify-center">
      {
        passedProducts.map((product) => (
          <ProductCardWithOverlay
            id={product.id}
            imageUrls={product.imageUrls}
            title={product.title}
            sex={product.sex}
          />
        ))
      }
    </div>
  </Main>
</Layout>
